{
  "branches": ["main"],
  "tagFormat": "${name}@${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node ../gpr/dist/index.mjs prepare --root . --json --manifest .artifacts/artifacts.json || echo 'prepare skipped'",
        "publishCmd": "if [ -d .gpr ]; then cd .gpr && printf \"//npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}\\n\" > .npmrc && npm publish --registry=https://npm.pkg.github.com/; else echo 'no .gpr directory, skip GPR publish'; fi"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": ".artifacts/*.tgz", "label": "npm package tarballs" }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ]
}
