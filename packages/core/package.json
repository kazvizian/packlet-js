{
  "name": "@packlet/core",
  "version": "0.1.0",
  "description": "Core utilities for packlet: artifact manifest, validation, name derivation.",
  "license": "MIT",
  "homepage": "https://github.com/kazvizian/packlet-js",
  "author": {
    "name": "KazViz",
    "email": "kaz@kazviz.com",
    "url": "https://kazviz.com"
  },
  "bugs": {
    "url": "https://github.com/kazvizian/packlet-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazvizian/packlet-js.git",
    "directory": "packages/core"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "node ../build/dist/cli.cjs build",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@packlet/build": "workspace:*"
  },
  "keywords": [
    "kazviz",
    "kazvizian",
    "packlet",
    "publish",
    "registry",
    "gpr",
    "npm",
    "package"
  ],
  "packlet": {
    "gpr": true
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "bun@1.3.1",
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18"
  }
}
