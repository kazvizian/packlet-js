{
  "name": "@packlet/cli",
  "version": "0.1.0",
  "description": "Umbrella CLI for packlet utilities (gpr, validate, list-artifacts).",
  "license": "MIT",
  "bin": {
    "packlet": "dist/index.cjs"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "node ../build/dist/cli.cjs build --exec-cjs",
    "lint": "eslint \"src/**/*.ts\" --ext .ts",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "@packlet/core": "workspace:*",
    "@packlet/gpr": "workspace:*",
    "@packlet/build": "workspace:*"
  },
  "devDependencies": {
    "@packlet/build": "workspace:*"
  },
  "packlet": {
    "gpr": true
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
