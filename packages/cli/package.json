{
  "name": "@packlet/cli",
  "version": "0.2.1",
  "description": "Umbrella CLI for packlet utilities (gpr, validate, list-artifacts).",
  "license": "MIT",
  "homepage": "https://github.com/kazvizian/packlet-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazvizian/packlet-js.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/kazvizian/packlet-js/issues"
  },
  "author": {
    "name": "KazViz",
    "email": "kazviz@nazator.com",
    "url": "https://kazviz.com"
  },
  "bin": {
    "packlet": "dist/index.mjs"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "node ../build/dist/cli.mjs build --sourcemap none --external-auto --exec-js",
    "test": "bun test",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "@packlet/core": "workspace:*",
    "@packlet/gpr": "workspace:*",
    "@packlet/build": "workspace:*"
  },
  "devDependencies": {
    "@packlet/build": "workspace:*"
  },
  "packlet": {
    "gpr": true
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
