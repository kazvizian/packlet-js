{
  "name": "packlet",
  "version": "0.1.0",
  "description": "A KazVizian toolkit to build packages and prepare deterministic release artifacts.",
  "license": "MIT",
  "homepage": "https://github.com/kazvizian/packlet-js",
  "author": {
    "name": "KazViz",
    "email": "kaz@kazviz.com",
    "url": "https://kazviz.com"
  },
  "bugs": {
    "url": "https://github.com/kazvizian/packlet-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazvizian/packlet-js.git",
    "directory": "packages/packlet"
  },
  "bin": {
    "packlet": "dist/index.mjs"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "node ../build/dist/cli.mjs build --sourcemap none --external-auto",
    "clean": "rm -rf dist .tsbuildinfo",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "bun test"
  },
  "dependencies": {
    "@packlet/core": "workspace:*",
    "@packlet/gpr": "workspace:*",
    "@packlet/cli": "workspace:*",
    "@packlet/build": "workspace:*"
  },
  "devDependencies": {},
  "keywords": [
    "kazviz",
    "kazvizian",
    "packlet",
    "github",
    "build",
    "publish",
    "registry",
    "gpr",
    "npm",
    "package"
  ],
  "packlet": {
    "gpr": true
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "bun@1.3.1",
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18"
  }
}
