{
  "name": "@packlet/gpr",
  "version": "0.2.0",
  "description": "A lightweight utility for preparing package variants compatible with GitHub Packages (GPR). It focuses on deterministic, local, and CI-friendly workflows",
  "license": "MIT",
  "homepage": "https://github.com/kazvizian/packlet-js",
  "author": {
    "name": "KazViz",
    "email": "kaz@kazviz.com",
    "url": "https://kazviz.com"
  },
  "bugs": {
    "url": "https://github.com/kazvizian/packlet-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazvizian/packlet-js.git",
    "directory": "packages/gpr"
  },
  "bin": {
    "packlet": "dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "node ../build/dist/cli.mjs build --exec-js --external-auto",
    "clean": "rm -rf dist .tsbuildinfo",
    "test": "bun test"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "@packlet/core": "^0.1.2"
  },
  "devDependencies": {
    "@packlet/build": "workspace:*"
  },
  "keywords": [
    "kazviz",
    "kazvizian",
    "packlet",
    "github",
    "publish",
    "registry",
    "gpr",
    "npm",
    "package"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packlet": {
    "gpr": true,
    "gprName": "packlet-gpr"
  },
  "packageManager": "bun@1.3.1",
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18"
  }
}
